<div class= "container">
<h3><%= erb :'/_errors', layout: false %></h3>

  <form class = "form" id= "edit-item-form" action = '/posts/<%=@post.id%>' method= "post">
    <input type ="hidden" NAME = "_method" value= "put">
    <label for= "post[body]">Description</label><br>
      <textarea type = "text" name= "post[body]"><%=@post.body%></textarea><br><br>
      <label for= "post[caption]">Caption</label><br>
      <textarea type = "text" name= "post[caption]"><%=@post.caption%></textarea><br><br>
      <p>Add tags as comma separated values:</p>
    <input type="text" name="tag" <% @post.tags.each do |tag| %>value= "<%= tag.body %>"<% end %>>
    <input type="submit" value="Update Post">
  </form>

</div>
